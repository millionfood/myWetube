extends layout/main
include mixins/videoBlock

block content 
    .home_wrapper
        .home_container
            img(src="/img/웅이삼촌 유튜브.png")
        .home_container
            .home_channel_header
                .home_channel_introduction
                    .home_channel_img_box 
                        if user 
                            img(src=`${user.avatarUrl? user.avatarUrl : "/img/프로필.jpg"}`)
                        else 
                            img(src="/img/프로필.jpg")
                    .home_channel_introduction_text 
                        span.home_channel_introduction_text_name 웅이 삼촌 유튜브
                        span.home_channel_introduction_text_subscription 구독자 0명
                .home_channel_subscription_btn 
                    span 구독                        
            .home_channel_tabs
                .home_channel_tabs_texts
                    a(href="#")  홈
                    a.hide(href="#")  동영상
                    a.hide(href="#")  재생목록
                    a.hide(href="#")  커뮤니티
                    a.hide(href="#")  정보
                    a.hide(href="#")   
                        i.fas.fa-search
        .homeVideo_wrapper
            .homeVideo_main
                if mainVideo
                    .homeVideo_main_video 
                        video(src=mainVideo.fileUrl,controls=true)
                    .homeVideo_main_text 
                        span [태웅이 화내다]
                        span 조회수 32,340회 | 1개월전
                        span 새로 오픈한 채널입니다 많은 관심부탁드립니다
                        span #태웅#화남#구독#좋아요
            .homeVideo_contianer
                span.homeVideo_contianer_text 업로드한 동영상
                .homeVideo_grid_box
                    if videos
                        each vvs in videos
                            +videoBlock({
                                videoFile:vvs.fileUrl,
                                title:vvs.title,
                                description:vvs.description,
                                id:vvs.id
                            })